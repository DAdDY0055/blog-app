<%= form_with(model: @contact, local: true) do |form| %>
  <% if @contact.errors.full_messages_for(:name).any? %>
    <div id="error_explanation">
      <h2>Nameを入力してください。</h2>
    </div>
  <% end %>

  <% if @contact.errors.full_messages_for(:email).any? %>
    <div id="error_explanation">
      <h2>Emailを入力してください。</h2>
    </div>
  <% end %>

  <% if @contact.errors.full_messages_for(:content).any? %>
    <div id="error_explanation">
      <h2>Contentは1文字以上140文字以下で入力してください。</h2>
    </div>
  <% end %>
  
  <p><%= notice %></p>

  <div class="contact">
    <br><%= form.label :name %></br>
    <br><%= form.text_field :name %></br>
  </div>
  
  <div class="contact">
    <br><%= form.label :email %></br>
    <br><%= form.text_field :email %></br>
  </div>
  
  <div class="contact">
    <br><%= form.label :content %></br>
    <br><%= form.text_field :content %></br>
  </div>
  <br>
  <%= form.submit :"Create Contant"%>
<% end %>